@model OrderFood_SW.Models.Dish
@{
    ViewData["Title"] = "Delete";
}

<!-- Detail Information -->
<div class="box box-primary" style="min-height:74vh;">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <div class="panel panel-danger" style="margin: 100px 0px">
                    <div class="panel-heading" style="text-align: center">
                        <strong>Are you sure you want to delete this Dish?</strong>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>@Html.DisplayNameFor(model => model.DishId)</dt>
                            <dd>@Html.DisplayFor(model => model.DishId)</dd>

                            <dt>@Html.DisplayNameFor(model => model.DishName)</dt>
                            <dd>@Html.DisplayFor(model => model.DishName)</dd>

                            <dt>@Html.DisplayNameFor(model => model.DishDescription)</dt>
                            <dd>@Html.DisplayFor(model => model.DishDescription)</dd>

                            <dt>@Html.DisplayNameFor(model => model.DishPrice)</dt>
                            <dd>@Html.DisplayFor(model => model.DishPrice)</dd>

                            <dt>@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                            <dd>@Html.DisplayFor(model => model.ImageUrl)</dd>

                            <dt>@Html.DisplayNameFor(model => model.CategoryId)</dt>
                            <dd>@Html.DisplayFor(model => model.CategoryId)</dd>

                            <dt>@Html.DisplayNameFor(model => model.IsAvailable)</dt>
                            <dd>@Html.DisplayFor(model => model.IsAvailable)</dd>

                            <dt>Photo: </dt>
                            <dd>
                                <img style="width:200px; height: 150px" src="~/images/Products/@Model.ImageUrl" alt="No photo" />
                            </dd>
                        </dl>
                    </div>

                    <div class="panel-footer text-right">
                        <form asp-action="Delete" style="display: inline;">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                        <a asp-action="Index" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>