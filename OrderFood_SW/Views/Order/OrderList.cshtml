@model OrderFood_SW.ViewModels.OrderPageModel

@{
    ViewData["Title"] = "OrderList";
}

<!-- Search Box -->
<div class="box box-primary">
    <div class="box-body">
        <form id="formsearch" method="get" action="~/Dishes/Index">
            <div class="input-group">
                <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control" placeholder="Search by Dish price, name or description" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Dishes/Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Add
                    </a>
                </div>
            </div>
        </form>

        <br

        <!-- Search Result -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Table ID</th>
                        <th>Order Time</th>
                        <th>Order Status</th>
                        <th>Total Amount</th>
                        <th>Note</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FoundOrders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TableId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.note)
                            </td>
                            <td>
                                <a href="~/Order/Detail?orderId=@item.OrderId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>