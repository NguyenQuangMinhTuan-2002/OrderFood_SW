@model OrderFood_SW.ViewModels.OrderPageModel

@{
    ViewData["Title"] = "Order History";
}

<!-- Search Box -->
<div class="box box-primary">
    <div class="box-body">

        <br

        <!-- Search Result -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Table ID</th>
                        <th>Order Time</th>
                        <th>Total Amount</th>
                        <th>Note</th>
                        <th>User ID</th>
                        <th style="width: 100px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FoundOrders)
                    {
                        if (item.OrderStatus == 2 || item.OrderStatus == -1)
                        {
                            <tr>
                                <td>@item.TableId</td>
                                <td>@item.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.TotalAmount.ToString("N0")</td>
                                <td>
                                    @if (item.OrderStatus == -1)
                                    {
                                        <p style="color:brown">Canceled</p>
                                    }
                                    else
                                    {
                                        <p>Approved</p>
                                    }
                                </td>
                                <td>
                                    @if (item.UserId == 1)
                                    {
                                        <p>Guess</p>
                                    }
                                    else
                                    {
                                        @item.UserId
                                    }
                                </td>
                                <td>
                                    <a href="~/Order/Detail/@item.OrderId">Show Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>