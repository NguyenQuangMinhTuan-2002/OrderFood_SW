@model OrderFood_SW.Models.Table
@{
    ViewData["Title"] = "Details";
}

<!-- Show table info -->
<div class="box box-primary" style="min-height:74vh;">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <div class="panel panel-default" style="margin: 100px 0px">
                    <div class="panel-heading" style="text-align: center">
                        <strong>Detail Table Information | Need Update ?</strong>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>@Html.DisplayNameFor(model => model.TableId)</dt>
                            <dd>@Html.DisplayFor(model => model.TableId)</dd>

                            <dt>@Html.DisplayNameFor(model => model.TableNumber)</dt>
                            <dd>@Html.DisplayFor(model => model.TableNumber)</dd>

                            <dt>@Html.DisplayNameFor(model => model.QRCode)</dt>
                            <dd>@Html.DisplayFor(model => model.QRCode)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Status)</dt>
                            <dd>@Html.DisplayFor(model => model.Status)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                            <dd>@Html.DisplayFor(model => model.Description)</dd>
                        </dl>
                    </div>

                    <div class="panel-footer text-right">
                        <a href="~/Tables/Edit/@Model.TableId" class="btn btn-success">Goto Edit</a>
                        <a asp-action="Index" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>