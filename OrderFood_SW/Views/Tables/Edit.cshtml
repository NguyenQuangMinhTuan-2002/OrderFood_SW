@model OrderFood_SW.Models.Table
@{
    ViewData["Title"] = "Edit From Table";
}

<!-- box border (just for fun) -->
<div class="box box-primary" style="min-height:74vh;">
    <div class="box-body">
        <!-- edit form table -->
        <div class="row">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <div class="panel panel-default" style="margin: 50px 0px">
                    <div class="panel-heading" style="text-align: center">
                        <strong>Edit Table Information</strong>
                    </div>
                    <div class="panel-body">
                        <form asp-action="Edit" class="form-horizontal" role="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="TableId" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="TableId" class="form-control" readonly />
                                    <span asp-validation-for="TableId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="TableNumber" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="TableNumber" class="form-control" />
                                    <span asp-validation-for="TableNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="QRCode" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="QRCode" class="form-control" />
                                    <span asp-validation-for="QRCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Status" class="form-control" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group text-right">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <input type="submit" value="Save Changes" class="btn btn-success" />
                                    <a asp-action="Index" class="btn btn-default">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
