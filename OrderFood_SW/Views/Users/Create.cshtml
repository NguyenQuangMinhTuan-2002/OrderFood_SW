@model OrderFood_SW.Models.Users
@{
    ViewData["Title"] = "Create New Table";
}
<!-- box border (just for fun) -->
<div class="box box-primary" style="min-height:74vh;">
    <div class="box-body">
        <!-- edit form table -->
        <div class="row">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <div class="panel panel-default" style="margin: 50px 0px">
                    <div class="panel-heading" style="text-align: center">
                        <strong>Create New Table Information</strong>
                    </div>
                    <div class="panel-body">
                        <form asp-action="Create" class="form-horizontal" role="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Username" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="PasswordHash" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="PasswordHash" class="form-control" />
                                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="FullName" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Role" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Role" class="form-control" />
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Check box</label>
                                <div class="col-sm-9">
                                    <label class="form-check-label" style="margin-top:6px">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>

                            <div class="form-group text-right">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <input type="submit" value="Create New" class="btn btn-success" />
                                    <a asp-action="Index" class="btn btn-default">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>