@model OrderFood_SW.Models.Users
@{
    ViewData["Title"] = "Details";
}

<!-- Show table info -->
<div class="box box-primary" style="min-height:74vh;">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <div class="panel panel-default" style="margin: 100px 0px">
                    <div class="panel-heading" style="text-align: center">
                        <strong>Detail User Information | Need Update ?</strong>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>@Html.DisplayNameFor(model => model.UserId)</dt>
                            <dd>@Html.DisplayFor(model => model.UserId)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
                            <dd>@Html.DisplayFor(model => model.Username)</dd>

                            <dt>@Html.DisplayNameFor(model => model.PasswordHash)</dt>
                            <dd>@Html.DisplayFor(model => model.PasswordHash)</dd>

                            <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
                            <dd>@Html.DisplayFor(model => model.FullName)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Role)</dt>
                            <dd>@Html.DisplayFor(model => model.Role)</dd>

                            <dt>@Html.DisplayNameFor(model => model.IsActive)</dt>
                            <dd>@Html.DisplayFor(model => model.IsActive)</dd>
                        </dl>
                    </div>

                    <div class="panel-footer text-right">
                        <a href="~/Users/Edit/@Model.UserId" class="btn btn-success">Goto Edit</a>
                        <a asp-action="Index" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>