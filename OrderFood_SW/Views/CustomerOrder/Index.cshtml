@model List<OrderFood_SW.Models.Table>
@{
    Layout = "_CustomerLayout";
}
<link rel="stylesheet" href="~/css/customer-style/customer-table-select.css" asp-append-version="true">

<div class="bg-animation">
    <div class="particle" style="top: 10%; left: 10%; width: 20px; height: 20px; animation-delay: 0s;"></div>
    <div class="particle" style="top: 20%; left: 80%; width: 15px; height: 15px; animation-delay: 1s;"></div>
    <div class="particle" style="top: 80%; left: 20%; width: 25px; height: 25px; animation-delay: 2s;"></div>
    <div class="particle" style="top: 60%; left: 70%; width: 18px; height: 18px; animation-delay: 3s;"></div>
</div>

<div class="container">
    <div class="header">
        <h1><i class="fas fa-utensils"></i> Select Your Table</h1>
        <p>Choose your preferred seating and start your dining experience</p>
    </div>

    <div class="tables-grid">
        @foreach (var item in Model)
        {
            if (item.Status.Equals("Occupied") || item.Status.Equals("Reserved") || item.Status.Equals("Maintenance"))
            {
                <a class="table-card">
                    <div class="table-icon">
                        <i class="fas fa-chair"></i>
                    </div>
                    <div class="table-number">Table number @item.TableNumber</div>
                    <div class="table-status" style="background-color: brown">@item.Status</div>
                    <div class="qr-code">
                        <i class="fas fa-qrcode"></i>
                    </div>
                    <div class="scan-text">Tap to order</div>
                </a>
            }
            else
            {
                <a href="~/CustomerOrder/CreateOrder?tableId=@item.TableId" class="table-card">
                    <div class="table-icon">
                        <i class="fas fa-chair"></i>
                    </div>
                    <div class="table-number">Table number @item.TableNumber</div>
                    <div class="table-status">@item.Status</div>
                    <div class="qr-code">
                        <i class="fas fa-qrcode"></i>
                    </div>
                    <div class="scan-text">Tap to order</div>
                </a>
            }
        }
    </div>

    <div class="footer-text">
        <p><i class="fas fa-mobile-alt"></i> Simply tap on your table to begin ordering</p>
    </div>
</div>