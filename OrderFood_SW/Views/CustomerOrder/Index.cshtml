@{
    Layout = "_CustomerLayout";
}
<link rel="stylesheet" href="~/css/customer-style/customer-table-select.css" asp-append-version="true">

<div class="bg-animation">
    <div class="particle" style="top: 10%; left: 10%; width: 20px; height: 20px; animation-delay: 0s;"></div>
    <div class="particle" style="top: 20%; left: 80%; width: 15px; height: 15px; animation-delay: 1s;"></div>
    <div class="particle" style="top: 80%; left: 20%; width: 25px; height: 25px; animation-delay: 2s;"></div>
